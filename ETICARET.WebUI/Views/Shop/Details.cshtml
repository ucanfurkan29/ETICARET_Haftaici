@* Model binding - ProductDetailsModel tipinde model bekler *@
@model ProductDetailsModel

@{
    @* Sayfa başlığını ayarla *@
    ViewData["title"] = "Product Detail";
}

@* Ana ürün detay container *@
<div class="row product-detail">

    @* Sol taraf - Ürün görselleri (3 kolon) *@
    <div class="col-md-3">

        @* Ana görsel container *@
        <div class="row">
            <div class="col-md-12 mb-3">
                @{
                    @* Ürün ID'sine göre ilk görseli bul *@
                    var image = Model.Product.Images.Find(img => img.ProductId == Model.Product.Id);
                }

                @* Ana görsel - varsa göster, yoksa placeholder *@
                @if (image != null)
                {
                    <img src="~/img/@image.ImageUrl"
                         class="img-fluid top-image"
                         id="image-box"
                         alt="@Model.Product.Name" />
                }
                else
                {
                    @* Görsel yoksa placeholder göster *@
                    <img src="~/img/placeholder.jpg"
                         class="img-fluid top-image"
                         id="image-box"
                         alt="No image available" />
                }
            </div>
        </div>

        @* Thumbnail görseller *@
        <div class="row">
            @foreach (var img in Model.Product.Images)
            {
                <div class="col-md-3 mb-3">
                    @* Tıklanabilir thumbnail - JavaScript ile ana görseli değiştirir *@
                    <img src="~/img/@img.ImageUrl"
                         class="img-fluid thumb-image"
                         onclick="imageBox(this)"
                         alt="@Model.Product.Name thumbnail" />
                </div>
            }
        </div>
    </div>

    @* Sağ taraf - Ürün bilgileri (9 kolon) *@
    <div class="col-md-9">

        @* Ürün adı *@
        <h1 class="mb-3">@Model.Product.Name</h1>
        <hr />
        <br />

        @* Kategori linkleri *@
        @foreach (var category in Model.Categories)
        {
            <a href="#" class="btn btn-link p-0 mb-3">@category.Name</a>
        }

        @* Fiyat ve sepete ekleme bölümü *@
        <div class="mb-3">
            <h4 class="text-primary mb-3">@Model.Product.Price TL</h4>

            @* Sepete ekleme formu - sadece admin olmayan ve giriş yapmış kullanıcılar için *@
            @if (!User.IsInRole("admin") && User.Identity.IsAuthenticated)
            {
                <form asp-controller="Cart" asp-action="AddToCart" method="POST">
                    @* Hidden field - Ürün ID'si *@
                    <input type="hidden" name="productId" value="@Model.Product.Id" />

                    @* Miktar seçimi ve sepete ekleme butonu *@
                    <div class="input-group cart-group">
                        <input type="number"
                               name="quantity"
                               value="1"
                               min="1"
                               step="1"
                               class="form-control quantity" />

                        <div class="input-group-append">
                            <button type="submit" class="btn btn-outline-primary btn-md ms-3">
                                <i class="fas fa-cart-plus"></i>
                                Add To Cart
                            </button>
                        </div>
                    </div>
                </form>
            }
        </div>
    </div>
</div>

@* Tab navigation - Açıklama ve Yorumlar *@
<div class="row">
    <ul class="nav nav-tabs mt-2" id="myTab" role="tablist">
        @* Açıklama tab *@
        <li class="nav-item" role="presentation">
            <button class="nav-link active"
                    id="profile-tab"
                    data-bs-toggle="tab"
                    data-bs-target="#description"
                    type="button"
                    role="tab"
                    aria-controls="profile"
                    aria-selected="false">
                Description
            </button>
        </li>

        @* Yorumlar tab *@
        <li class="nav-item" role="presentation">
            <button class="nav-link"
                    id="home-tab"
                    data-bs-toggle="tab"
                    data-bs-target="#comment"
                    type="button"
                    role="tab"
                    aria-controls="home"
                    aria-selected="true">
                Comments
            </button>
        </li>
    </ul>

    @* Tab içerikleri *@
    <div class="tab-content" id="myTabContent">

        @* Açıklama tab içeriği *@
        <div class="tab-pane fade show active"
             id="description"
             role="tabpanel"
             aria-labelledby="home-tab">
            @* HTML içeriği olduğu gibi render et *@
            @Html.Raw(Model.Product.Description)
        </div>

        @* Yorumlar tab içeriği *@
        <div class="tab-pane fade"
             id="comment"
             role="tabpanel"
             aria-labelledby="profile-tab"
             data-product-id="@Model.Product.Id"
             data-url="@Url.Action(action: "ShowProductComments", controller: "Comment", new { id = Model.Product.Id })">

            @* Partial view ile yorumları göster *@
            <partial name="_PartialComments" for="@Model.Comments" />
        </div>
    </div>
</div>

@* JavaScript dosyalarını Scripts section'ına ekle *@
@section Scripts {
    <script src="~/js/CommentsImages.js"></script>
}
