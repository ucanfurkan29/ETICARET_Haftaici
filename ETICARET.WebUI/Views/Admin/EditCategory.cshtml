@model CategoryModel

@{
    // Sayfa başlığını düzenler

    ViewData["title"] = "Edit Category";
}

<h1>Edit Category</h1>
<hr />

<!-- Kategori düzenleme formu -->
<form asp-controller="Admin" asp-action="EditCategory" method="POST">
    <div class="row">
        <!-- Düzenlenecek kategorinin Id'si, gizli alan olarak gönderilir -->
        <input type="hidden" name="Id" value="@Model.Id" />

        <!-- Kategori adı alanı -->
        <div class="mb-3 col-md-3 p-0">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" placeholder="Category Name" />
            <span asp-validation-for="Name"></span>
        </div>

        <!-- Kaydet butonu -->
        <div class="mb-3 p-0 col-md-2 d-flex justify-content-center align-items-end">
            <button type="submit" class="btn btn-primary">Edit Category</button>
        </div>
    </div>
</form>

<!-- Eğer bu kategoriye ait ürünler varsa, tablo şeklinde gösterilir -->
@if (Model.Products.Count > 0)

{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>     <!-- Ürün ID -->
                <th scope="col">Image</th> <!-- Ürün Resmi -->
                <th scope="col">Name</th>  <!-- Ürün Adı -->
                <th scope="col">Price</th> <!-- Ürün Fiyatı -->
                <th scope="col"></th>      <!-- Düzenleme / Silme için boş başlık -->
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Products)

            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>
                        <!-- Ürün resminin küçük hali gösterilir -->
                        <img src="~/img/@item.Images[0].ImageUrl" width="80" />
                    </td>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td>
                        <!-- Ürün düzenleme butonu -->
                        <a class="btn btn-warning btn-sm me-2" href="/admin/products/@item.Id">Edit</a>

                        <!-- Ürün silme formu -->
                        <form action="/admin/deleteproduct" method="POST" style="display:inline">
                            <input type="hidden" name="productId" value="@item.Id" />
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

else

{
    <!-- Kategoriye ait hiç ürün yoksa uyarı mesajı göster -->
    <div class="alert alert-warning">
        <h4>No Products</h4>
    </div>
}
